<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="image"
            type="String" />
    </data>

    <com.makeramen.roundedimageview.RoundedImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        setImageUrl="@{image}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_city"
        app:riv_corner_radius_bottom_left="@dimen/_50dp"
        app:riv_corner_radius_bottom_right="@dimen/_50dp">

    </com.makeramen.roundedimageview.RoundedImageView>
</layout>